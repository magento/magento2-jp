<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="customer_form_register">
                <action method="setTemplate" ifconfig="localize/address/change_fields_order">
                    <argument name="template" xsi:type="string">MagentoJapan_Kana::customer/form/jpregister.phtml</argument>
                </action>
                <action method="setShowAddressFields" ifconfig="localize/address/show_address">
                    <argument name="show_address" xsi:type="boolean">true</argument>
                </action>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
